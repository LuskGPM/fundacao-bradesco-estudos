<JanelaCriarConta>:
    name:'create'
    nome:nome
    sobrenome:sobrenome
    email:email
    senha:senha

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                size_hint: .5,.12
                pos_hint: {'x':0 , 'top':.8 }
                text: 'Name:'
                font_size: (root.width**2 + root.height**2) / 14**4
            
            TextInput:
                pos_hint: {'x': .5 , 'top':.8}
                size_hint: .4, .12
                id: nome
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "Sobrenome: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:

                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.12
                id: sobrenome
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:

                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "Email: "
                font_size: (root.width**2 + root.height**2) / 14**4


            TextInput:

                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.12
                id: email
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4


            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*3}
                text: "Password: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:

                pos_hint: {"x":0.5, "top":0.8-0.13*3}
                size_hint: 0.4, 0.12
                id: senha
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4


        Button:

            pos_hint:{"x":0.3,"y":0.15}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Already have an Account? Log In"

            on_release:
                root.manager.transition.direction = "left"
                root.login()


Button:

    pos_hint:{"x":0.2,"y":0.05}
    size_hint: 0.6, 0.15
    text: "Submit"
    font_size: (root.width**2 + root.height**2) / 14**4
    on_release:
        root.manager.transition.direction = "left"
        root.submit()



<JanelaLogin>:

    name: "login"
    email: email
    senha: password


    FloatLayout:

        Label:

            text:"Email: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35, 0.05

        TextInput:

            id: email
            font_size: root.width * 3 / 100
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.9}
            size_hint: 0.5, 0.1

        Label:

            text:"Senha: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.15


        TextInput:

            id: password
            font_size: root.width * 3 / 100
            multiline: False
            password: True
            pos_hint: {"x": 0.45, "top":0.7}
            size_hint: 0.5, 0.1

        Button:
            pos_hint:{"x":0.35,"y":0.05}
            size_hint: 0.4, 0.1
            font_size: root.width * 3 / 100
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:

            pos_hint:{"x":0.3,"y":0.3}
            size_hint: 0.5, 0.1
            font_size: root.width * 3 / 130
            text: "NÃ£o tem uma conta? Crie uma"
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()

<JanelaPrincipal>:

    n: n
    email: email

    FloatLayout:

        Label:

            id: n
            pos_hint:{"x": 0.1, "top":0.9}
            size_hint:0.8, 0.2
            text: "Account Name: "

        Label:

            id: email
            pos_hint:{"x": 0.1, "top":0.7}
            size_hint:0.8, 0.2
            text: "Email: "

        Button:
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint:0.6,0.2
            text: "Sair"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"
